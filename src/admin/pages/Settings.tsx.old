/* ============================================================================
   SPORT CARD
   ========================================================================== */

function SportCard({
    title,
    description,
    status,
    to,
}: {
    title: string;
    description: string;
    status: "active" | "coming-soon";
    to?: string;
}) {
    const isActive = status === "active";

    const card = (
        <div className="card">
            <div
                style={{
                    display: "flex",
                    justifyContent: "space-between",
                    alignItems: "start",
                }}
            >
                <h3>{title}</h3>
                <span
                    className={
                        isActive ? "badge success" : "badge"
                    }
                >
                    {isActive ? "Active" : "Coming soon"}
                </span>
            </div>

            <p className="muted" style={{ marginTop: 8 }}>
                {description}
            </p>

            {isActive && (
                <div style={{ marginTop: 16 }}>
                    <span className="btn btn--sm-primary">
                        Manage
                    </span>
                </div>
            )}
        </div>
    );

    return isActive && to ? <Link to={to}>{card}</Link> : card;
}
