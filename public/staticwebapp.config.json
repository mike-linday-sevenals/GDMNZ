{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/assets/*",
      "/api/*",
      "/sitemap.xml",
      "/robots.txt",
      "/*.xml",
      "/*.json"
    ]
  },

  "routes": [
    {
      "route": "/sitemap.xml",
      "headers": {
        "Cache-Control": "public, max-age=300"
      }
    },
    {
      "route": "/robots.txt",
      "headers": {
        "Cache-Control": "public, max-age=300"
      }
    }
  ],

  "globalHeaders": {
    "X-Frame-Options": "SAMEORIGIN",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  }
}
